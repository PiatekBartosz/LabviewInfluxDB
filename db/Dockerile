from influxdb:2

WORKDIR /workspace

RUN apt update && apt -y install --no-install-recommends \
    zsh \
    python3 \
    python3-pip 

COPY ./requirements.txt /code/requirements.txt
RUN pip install --no-cache-dir --upgrade -r /code/requirements.txt

COPY ./app /code/app   # python3-uvicorn[standard]

EXPOSE 8086